<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # アセットファイル、PDF、画像ファイルは書き換えない
  RewriteRule ^assets/ - [L]
  RewriteRule ^pdf/ - [L]
  RewriteRule \.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|pdf)$ - [L]

  # index.html 自身は書き換えない
  RewriteRule ^index\.html$ - [L]

  # 実ファイル / 実ディレクトリがないパスだけ index.html に集約
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [L]
</IfModule>
